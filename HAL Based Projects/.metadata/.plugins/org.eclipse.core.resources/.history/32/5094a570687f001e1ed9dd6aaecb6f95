/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;

TIM_HandleTypeDef htim2;

UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */

uint8_t RX_BUFFER[Buffer_len]; // Tableau pour stocker les commandes Bluetooth.
uint8_t LEDs[LED_Number]; // Tableau pour réprésenter les 3 Led.
uint16_t ADC_Value;   // Stockage de la valeur convertie du potentiometre.
uint32_t CC_value; // CCR1 register is a 32bit register so that's why we are using a uint32_t variable.
float duty_cycle=0;


/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_ADC1_Init(void);
