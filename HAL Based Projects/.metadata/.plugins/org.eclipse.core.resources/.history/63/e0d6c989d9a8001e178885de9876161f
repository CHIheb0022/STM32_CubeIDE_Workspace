/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

#define ADC_max  1024
#define PWM_max  255
#define Rx_len   3

#define enB TIM_CHANNEL_1 // Right motor
#define in3 GPIO_PIN_2
#define in4 GPIO_PIN_3

#define enA TIM_CHANNEL_2 // Left motor
//#define in3 GPIO_PIN_2
//#define in4 GPIO_PIN_3



/* USER CODE END PTD */

